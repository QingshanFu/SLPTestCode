@model List<SLPValidation.Models.ValidationResult>

@{
    ViewBag.Title = "APOC SLP Validation Result";
    var records = Model;
}

<style>
    #Table_ResultList th, #Table_ResultList td
    {
        border: 2px solid grey;
    }
</style>

<div>
    <hr style="margin-top:0px;margin-bottom:0px;border:1px solid grey" />
    <span style="display:inline-block;font-size:20px;height:60px;line-height:60px">
        Reference Documents: 
    </span>
    <hr style="margin-top:0px;border:1px solid grey" />
    
    <table id="Table_ResultList" style="display:inline-block;width:100%;margin-top:10px">
        <tr style="background-color:#999999">
            <th width="4%">NO.</th>
            <th width="35%">Rule Description</th>
            <th width="8%">Result</th>
            <th width="20%">Document Name</th>
            <th width="15%">Field Name</th>
            <th width="15%">Expected</th>
            <th width="15%"><span style="display:inline-block;width:120px">Actual</span></th>
        </tr>

        @for (int i = 0; i < 20; i++)
        {
            var color = i % 2 == 0 ? "#ffffff" : "#eee";
            if (i < records.Count)
            {
                <tr style="background-color:@color">
                    <td>@(i+1)</td>
                    <td>@records[i].RuleDescription</td>
                    <td>@records[i].ResultText</td>
                    <td>@records[i].DocumentName</td>
                    <td>@records[i].FieldName</td>
                    <td>@records[i].Expected</td>
                    <td>@records[i].Actual</td>
                </tr>
            }
            else
            {
                <tr style="background-color:@color">
                    <td >&nbsp;</td>
                    <td >&nbsp;</td>
                    <td >&nbsp;</td>
                    <td >&nbsp;</td>
                    <td >&nbsp;</td>
                    <td >&nbsp;</td>
                    <td >&nbsp;</td>
                </tr>
            }
        }
    </table>
</div>

@section scripts{
    <script src="@Url.Content("~/Scripts/SLPValidation/SLPValidationMain.js")" type="text/javascript"></script>
}